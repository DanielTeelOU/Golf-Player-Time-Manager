<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67A84C"
    android:orientation="vertical"
    tools:context=".GameSetUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:background="#fff"

        >
        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday Morning"
            android:layout_centerVertical="true"
            android:textColor="#67A84C"
            android:layout_margin="20dp"

            />
        <TextView


            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="3/4/2020"
            android:layout_margin="20dp"
            android:textColor="#67A84C"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="20dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/Course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oakland University R and S Sharf Golf Course"
            android:layout_margin="20dp"
            android:inputType="textMultiLine"
            android:textColor="#67A84C"
            android:layout_weight="1"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/holenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 Holes"
            android:textColor="#67A84C"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:maxLines="2"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/Difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:layout_centerVertical="true"
            android:textColor="#67A84C"
            android:layout_margin="20dp"/>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/SelectDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Difficulty"
                android:textColor="#67A84C"
                />
            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigate_next_black_24dp"
                />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/manageGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Manage Group"
            android:layout_margin="20dp"
            android:textColor="#67A84C"
            android:pointerIcon="arrow"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:background="#fff"
        android:layout_weight=".5"

        >

        <ListView
            android:id="@+id/GroupList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#EFF0F1"
            android:dividerHeight="2px"


            >

        </ListView>

    </RelativeLayout>


        <Button
            android:id="@+id/StartRoundbtn"
            android:textSize="24dp"
            android:text="Start Round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#67A84C"
            android:elevation="10dp"
            />





</LinearLayout>