<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/difficultyHeading"
        android:text="Blue Square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:layout_centerHorizontal="true"
        android:textColor="#67A84C"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/DifficultyDescription"
        android:text="Description"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/difficultyHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#67A84C"
        />

    <LinearLayout
        android:id="@+id/ParYardLayout"
        android:orientation="vertical"
        android:layout_below="@+id/DifficultyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        >
        <TextView
            android:id="@+id/parDifficulty"
            android:text="Par: 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="#67A84C"
             />

        <TextView
            android:id="@+id/yardsDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 yards"
            android:textSize="26dp"
            android:textColor="#67A84C"
            />
    </LinearLayout>


</RelativeLayout>