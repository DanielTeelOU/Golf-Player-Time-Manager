<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/NextHoleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Hole Info"
            android:layout_centerHorizontal="true"
            android:paddingTop="20sp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#67A84C"
            />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_below="@id/NextHoleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingTop="20sp"
            >

            <TextView
                android:id="@+id/nextholenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hole 2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#67A84C"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_below="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingTop="20sp"

            >
            <TextView
                android:id="@+id/nextholenumofgames"
                android:text="3 Games On This Hole"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#67A84C"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout3"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingTop="20sp"
            >
            <TextView
                android:id="@+id/nextholenumofplayers"
                android:text="20 Players On This Hole"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#67A84C"
                />
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="94dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="13dp"
        app:srcCompat="@drawable/courseicon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="94dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="286dp"
        android:layout_marginRight="286dp"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/courseicon" />


</RelativeLayout>