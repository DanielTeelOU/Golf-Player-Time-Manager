<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingTop="20sp"
            >

            <TextView
                android:id="@+id/nextholenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hole 2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#67A84C"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_below="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingTop="20sp"

            >
            <TextView
                android:id="@+id/nextholenumofgames"
                android:text="3 Games On This Hole"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#67A84C"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout3"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingTop="20sp"
            >
            <TextView
                android:id="@+id/nextholenumofplayers"
                android:text="20 Players On This Hole"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#67A84C"
                />
            <TextView
                android:id="@+id/waittime"
                android:text="716.8 Min Wait Time"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#67A84C"
                />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>